@model BoulderBox.Web.ViewModels.Users.UserDetailsViewModel

@{
    ViewData["Title"] = Model.UserName;
}

<div class="col-md-8 offset-md-2 col-xs-10 offset-xs-1">
    <br />
    <br />
    <div class="row justify-content-center">
        <img src="@Model.ImageSource" class="card-img"/>
        <h1>@Model.UserName</h1>
    </div>
    <hr class="bg-secondary" />
    @if (Model.Bio != null)
    {
        <p>@Model.Bio</p>
        <hr class="bg-secondary" />
    }

    <h2>Ascents of @Model.UserName</h2>
    <br />
    <table class="table border border-warning table-sm">
        <thead class="bg-warning">
            <tr>
                <th scope="col">Date</th>
                <th scope="col">Style</th>
                <th scope="col">Grade</th>
                <th scope="col">Boulder</th>
                <th scope="col">Comment</th>
                <th scope="col">Stars</th>
            </tr>
        </thead>
        <tbody class="bg-light">

            @if (!Model.Ascents.Any())
            {
                <tr>
                    <td>No ascents of this boulder</td>
                    <td>-</td>
                    <td>-</td>
                    <td>-</td>
                    <td>-</td>
                    <td>-</td>
                </tr>
            }

            @foreach (var ascent in Model.Ascents)
            {
                var badge = "badge badge-danger";

                if (ascent.StyleShortText == "OS")
                {
                    badge = "badge badge-info";
                }
                else if (ascent.StyleShortText == "FL")
                {
                    badge = "badge badge-warning";
                }

                <tr>
                    <td>@ascent.Date.ToString("dd/MM/yyyy")</td>
                    <td><span class="@badge">@ascent.StyleShortText</span></td>
                    <td>@ascent.GradeText</td>
                    <td>@ascent.BoulderName</td>
                    <td>@(ascent.Comment ?? "-")</td>
                    @if (ascent.Stars == null)
                    {
                        <td>-</td>
                    }
                    else
                    {
                        <td>@ascent.Stars</td>
                    }
                </tr>
            }
        </tbody>
    </table>
</div>


