@model BoulderBox.Web.ViewModels.ForumCategories.ForumCategoryInputModel

@{
    ViewData["Title"] = "CreateCetegory";
}

<h1>CreateCetegory</h1>
<hr class="bg-secondary" />

<form asp-controller="ForumCategories" asp-action="Create" method="post" enctype="multipart/form-data">
    <div asp-validation-summary="All" class="text-danger"></div>
    <div class="form-group">
        <label asp-for="Name" class="col-form-label"></label>
        <input asp-for="Name" class="form-control" placeholder="Category name" />
        <span asp-validation-for="Name" class="text-danger"></span>
    </div>
    <div class="form-group">
        <label asp-for="Description" class="col-form-label"></label>
        <textarea asp-for="Description" class="form-control" placeholder="Short description of the category"></textarea>
        <span asp-validation-for="Description" class="text-danger"></span>
    </div>
    <div class="form-group">
        <label class="col-form-label">Picture</label>
        <input type="file" name="formFile" class="form-control-file" />
    </div>
    <button type="submit" class="btn btn-outline-dark">Create</button>
</form>
