@model IEnumerable<BoulderBox.Web.ViewModels.Forum.ForumCategoryViewModel>

@{
    ViewData["Title"] = "Forum Categories";
}

<div class="col-8 offset-2">

    <br />
    <br />
    <h1>Forum Categories  <a asp-area="" asp-controller="Forum" asp-action="CreateCategory" class="btn btn-outline-dark">Create Category</a></h1>
    <hr class="bg-secondary" />

    <table class="table table-borderless">
        <thead>
            <tr>
                <th>Category</th>
                <th>Posts</th>
                <th>Description</th>
                <th></th>
            </tr>
        </thead>
        <tbody>
            @foreach (var category in Model)
            {
                <tr>
                    <td><a asp-area="" asp-controller="Forum" asp-action="Category" asp-route-id="@category.Id">@category.Name</a></td>
                    <td>@category.ForumPostsCount</td>
                    <td>@category.Description</td>
                    <td><a asp-area="" asp-controller="Forum" asp-action="Category" asp-route-id="@category.Id" class="btn btn-outline-dark">Details</a></td>
                </tr>
            }
        </tbody>
    </table>
</div>