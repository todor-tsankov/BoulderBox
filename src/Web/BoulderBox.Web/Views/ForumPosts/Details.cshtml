@model BoulderBox.Web.ViewModels.ForumPosts.ForumPostAndCommentInputViewModel

@{
    ViewData["Title"] = "Details";
}

<div class="row ml-2">
    <h2>@Model.ForumPost.Title</h2>
</div>
<hr class="bg-secondary" />

@if (Model.Pagination.CurrentPage == 1)
{
    <div class="card h-100 border-primary bg-light mb-4">
        <div class="card-header text-light bg-primary">
            <div class="card-title">
                <div class="row">
                    <div class="col-md-6">
                        <a>@Model.ForumPost.ApplicationUserUserName</a>
                    </div>
                    <div class="col-md-6">
                        <div class="row justify-content-end">
                            <a class="mr-3">@Model.ForumPost.CreatedOn</a>
                        </div>
                    </div>
                </div>
            </div>
        </div>
        <div class="card-body d-flex flex-column">
            <p>@Model.ForumPost.Text</p>
        </div>
    </div>
}

@foreach (var comment in Model.ForumComments)
{
    <div class="card h-100 border-primary bg-light mb-4">
        <div class="card-header text-light bg-primary">
            <div class="card-title">
                <div class="row">
                    <div class="col-md-6">
                        <a>@comment.ApplicationUserUserName</a>
                    </div>
                    <div class="col-md-6">
                        <div class="row justify-content-end">
                            <a class="mr-3">@comment.CreatedOn</a>
                        </div>
                    </div>
                </div>
            </div>
        </div>
        <div class="card-body">
            <p>@comment.Text</p>
        </div>
    </div>
}

@if (Model.Pagination.CurrentPage == Model.Pagination.LastPage)
{
    <div class="card h-100 border-primary bg-light mb-4">
        <div class="card-header text-light bg-primary">
            <div class="card-title">
                <div class="row">
                    <div class="col-md-6">
                        <a>@Model.Username</a>
                    </div>
                    <div class="col-md-6">
                        <div class="row justify-content-end">
                            <a class="mr-3">@DateTime.UtcNow</a>
                        </div>
                    </div>
                </div>
            </div>
        </div>
        <div class="card-body">
            <form asp-controller="ForumComments" asp-action="Create" method="post">
                <div asp-validation-summary="All" class="text-danger"></div>
                <div class="form-group">
                    <input name="redirectLink" value="@Model.RedirectLink" type="hidden" />
                </div>
                <div class="form-group">
                    <input asp-for="ForumComment.ForumPostId" name="ForumPostId" value="@Model.ForumPost.Id" type="hidden" />
                </div>
                <div class="form-group">
                    <textarea asp-for="ForumComment.Text" name="Text" class="form-control" placeholder="Your comment goes here"></textarea>
                    <span asp-validation-for="ForumComment.Text" class="text-danger"></span>
                </div>
                <div class="container">
                    <div class="row justify-content-end">
                        <button type="submit" class="btn btn-outline-primary">Post</button>
                    </div>
                </div>
            </form>
        </div>
    </div>
}

<div class="row justify-content-center mt-4">
    <partial name="_PaginationPartial" model="this.Model.Pagination" />
</div>