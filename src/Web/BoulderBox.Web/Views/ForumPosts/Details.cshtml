@model BoulderBox.Web.ViewModels.ForumPosts.ForumPostAndCommentInputViewModel

@{
    ViewData["Title"] = "Details";
}

<div class="col-md-8 offset-md-2">
    <br />
    <br />
    <h1>@Model.ForumPost.Title</h1>
    <hr class="bg-secondary" />
    <br />

    <div class="card border-dark">
        <div class="card-body">
            <div class="row">
                <div class="container col-md-8">
                    <h3>@Model.ForumPost.ApplicationUserUserName</h3>
                </div>
                <div class="container col-md-4">
                    <div class="row col-12 justify-content-md-end">
                        <p>@Model.ForumPost.CreatedOn</p>
                    </div>
                </div>
            </div>

            <hr class="bg-secondary" />
            <p>@Model.ForumPost.Text</p>
        </div>
    </div>

    <br />

    @foreach (var comment in Model.ForumComments)
    {
        <div class="card border border-secondary">
            <div class="card-body">
                <div class="row">
                    <div class="container col-md-8">
                        <h3>@comment.ApplicationUserUserName</h3>
                    </div>
                    <div class="container col-md-4">
                        <div class="row col-12 justify-content-md-end">
                            <p>@comment.CreatedOn</p>
                        </div>
                    </div>
                </div>

                <hr class="bg-secondary" />
                <p>@comment.Text</p>
            </div>
        </div>

        <br />
    }

    <div class="card border border-secondary">
        <div class="card-body">
            <div class="row">
                <div class="container col-md-8">
                    <h3>@Model.Username</h3>
                </div>
                <div class="container col-md-4">
                    <div class="row col-12 justify-content-md-end">
                        <p>@DateTime.Now</p>
                    </div>
                </div>
            </div>

            <form asp-controller="ForumComments" asp-action="Create" method="post">
                <div asp-validation-summary="All" class="text-danger"></div>
                <div class="form-group">
                    <input name="redirectLink" value="@Model.RedirectLink" type="hidden" />
                </div>
                <div class="form-group">
                    <input asp-for="ForumComment.ForumPostId" name="ForumPostId" value="@Model.ForumPost.Id" type="hidden" />
                </div>
                <div class="form-group">
                    <textarea asp-for="ForumComment.Text" name="Text" class="form-control" placeholder="Your comment goes here"></textarea>
                    <span asp-validation-for="ForumComment.Text" class="text-danger"></span>
                </div>
                <div class="container">
                    <div class="row justify-content-end">
                        <button type="submit" class="btn btn-outline-dark">Post</button>
                    </div>
                </div>
            </form>
        </div>
    </div>
</div>
