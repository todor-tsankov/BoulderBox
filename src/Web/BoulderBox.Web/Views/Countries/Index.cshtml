@model IEnumerable<BoulderBox.Web.ViewModels.Countries.CountryViewModel>

@{
    ViewData["Title"] = "Index";
}

<div class="col-8 offset-2">

    <br />
    <h1>Countries <a asp-area="" asp-controller="Countries" asp-action="Create" class="btn btn-outline-dark">Create</a></h1>
    <hr class="bg-secondary" />

    <div class="container">
        <div class="row justify-content-start">
            @foreach (var country in Model)
            {
                <div class="card border-primary mb-3 col-lg-4">
                    <div class="card-header bg-primary text-light">@country.Name, @country.CountryCode</div>
                    <div class="card-body">
                        @if (country.ImageSource != null)
                        {
                            <img src="@country.ImageSource" style="padding:0px" class=" border border-dark col-md-12" />
                        }
                        else
                        {
                            <img src="~/img/no-image-available-2.jpg"  style="padding:0px" class="border border-0 border-dark col-md-12" />
                        }
                        <hr class="bg-primary" />
                        <p class="card-text">@(country.Description ?? "No description.")</p>
                        <hr class="bg-primary" />
                        <div class="row justify-content-end">
                            <button class="btn btn-outline-dark">Details</button>
                            <span class="text-light">.</span>
                            <button class="btn btn-outline-danger">Delete</button>
                        </div>
                    </div>
                </div>
            }
        </div>
    </div>
</div>