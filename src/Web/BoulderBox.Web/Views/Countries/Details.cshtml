@model BoulderBox.Web.ViewModels.Countries.CountryDetailsViewModel

@{
    ViewData["Title"] = Model.Name;
}

<div class="row ml-2">
    @if (Model.ImageSource != null)
    {
        <img src="@Url.Content(Model.ImageSource)" class="card-img border border-secondary col-2 col-lg-1 mr-3 p-0" />
    }
    <h2 class="mt-2">@Model.Name (@Model.CountryCode)</h2>
</div>

@if (Model.Description != null)
{
    <hr class="bg-secondary mt-4" />
    <p class="text-break">@Model.Description</p>
}

<hr class="bg-secondary mb-4" />
<h3>Cities in @Model.Name</h3>

<div class="table-responsive mt-3">
    <table class="table table-borderless table-hover table-striped">
        <thead class="bg-primary text-light">
            <tr>
                <th scope="col">City Name</th>
                <th scope="col">Gyms</th>
                <th scope="col">Ascents</th>
                <th scope="col">Boulders</th>
            </tr>
        </thead>
        <tbody class="table-light">

            @if (Model.Cities.Count == 0)
            {
                <tr>
                    <td>No cities in @Model.Name</td>
                    <td>-</td>
                    <td>-</td>
                    <td>-</td>
                </tr>
            }

            @foreach (var city in Model.Cities)
            {
                <tr>
                    <td><a asp-area="" asp-controller="Cities" asp-action="Details" asp-route-id="@city.Id" class="text-dark" />@city.Name<a /></td>
                    <td>@city.GymsCount</td>
                    <td>@city.AscentsCount</td>
                    <td>@city.BouldersCount</td>
                </tr>
            }
        </tbody>
    </table>
</div>