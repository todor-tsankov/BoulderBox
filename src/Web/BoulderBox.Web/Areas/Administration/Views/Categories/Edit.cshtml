@model BoulderBox.Web.ViewModels.Forum.Categories.CategoryEditViewModel

@{
    ViewData["Title"] = "Edit Category";
}

<div class="row ml-2">
    <div class="row">
        <h2>@ViewData["Title"]</h2>
        <form asp-area="Administration" asp-controller="Categories" asp-action="Delete" asp-route-id="@Model.Id" method="post">
            <button type="submit" class="btn btn-danger ml-3 mt-1 mb-1">Delete</button>
        </form>
    </div>
</div>
<hr class="bg-secondary" />

<form asp-area="Administration" asp-controller="Categories" asp-action="Edit" method="post" enctype="multipart/form-data">
    <div asp-validation-summary="All" class="text-danger"></div>
    <input type="hidden" name="id" value="@Model.Id" />
    <div class="form-group">
        <label asp-for="CategoryInput.Name" class="col-form-label"></label>
        <input asp-for="CategoryInput.Name" class="form-control" placeholder="Category name" />
        <span asp-validation-for="CategoryInput.Name" class="text-danger"></span>
    </div>
    <div class="form-group">
        <label asp-for="CategoryInput.Description" class="col-form-label"></label>
        <textarea asp-for="CategoryInput.Description" class="form-control" placeholder="Short description of the category"></textarea>
        <span asp-validation-for="CategoryInput.Description" class="text-danger"></span>
    </div>
    <div class="form-group">
        <label class="col-form-label"></label>
        <input type="file" asp-for="CategoryInput.FormFile" class="form-control-file" />
    </div>
    <button type="submit" class="btn btn-success">Save</button>
</form>
