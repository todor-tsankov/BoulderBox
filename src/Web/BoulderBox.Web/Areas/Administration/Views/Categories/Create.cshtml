@model BoulderBox.Web.ViewModels.Forum.Categories.CategoryInputModel

@{
    ViewData["Title"] = "Create Category";
}

<div class="row ml-2">
    <h2>@ViewData["Title"]</h2>
</div>
<hr class="bg-secondary" />

<form asp-area="Administration" asp-controller="Categories" asp-action="Create" method="post" enctype="multipart/form-data">
    <div asp-validation-summary="All" class="text-danger"></div>
    <div class="form-group">
        <label asp-for="Name" class="col-form-label"></label>
        <input asp-for="Name" class="form-control" placeholder="Category name" />
        <span asp-validation-for="Name" class="text-danger"></span>
    </div>
    <div class="form-group">
        <label asp-for="Description" class="col-form-label"></label>
        <textarea asp-for="Description" class="form-control" placeholder="Short description of the category"></textarea>
        <span asp-validation-for="Description" class="text-danger"></span>
    </div>
    <div class="form-group">
        <label class="col-form-label"></label>
        <input type="file" name="formFile" class="form-control-file" />
    </div>
    <button type="submit" class="btn btn-success">Create</button>
</form>
