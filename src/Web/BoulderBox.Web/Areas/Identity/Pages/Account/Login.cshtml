@page
@model LoginModel

@{
    ViewData["Title"] = "Log in";
}

<h2>@ViewData["Title"]</h2>
<hr class="bg-secondary" />

<form id="account" method="post">
    <div asp-validation-summary="All" class="text-danger"></div>
    <div class="form-group">
        <label asp-for="Input.Username">Username *</label>
        <input asp-for="Input.Username" class="form-control" />
        <span asp-validation-for="Input.Username" class="text-danger"></span>
    </div>
    <div class="form-group">
        <label asp-for="Input.Password">Password *</label>
        <input asp-for="Input.Password" class="form-control" />
        <span asp-validation-for="Input.Password" class="text-danger"></span>
    </div>
    <div class="form-group row">
        <div class="col-lg-10">
            <div class="custom-control custom-checkbox d-inline">
                <input asp-for="Input.RememberMe" class="custom-control-input" id="customCheck" />
                <label asp-for="Input.RememberMe" class="custom-control-label" for="customCheck"></label>
            </div>
        </div>
    </div>
    <p>* Required</p>
    <div class="form-group">
        <button type="submit" class="btn btn-success">Log in</button>
    </div>
    <div class="form-group">
        <p>
            <a class="text-dark" id="forgot-password" asp-page="./ForgotPassword">Forgot your password?</a>
        </p>
        <p>
            <a class="text-dark" asp-page="./Register" asp-route-returnUrl="@Model.ReturnUrl">Register as a new user</a>
        </p>
    </div>
</form>

@section Scripts {
    <partial name="_ValidationScriptsPartial" />
}
